{
  "manifest_version": 3,
  "name": "Tabia â€” Smart Tab Session Manager With Collaboration",
  "description": "Save, restore, and collaborate on browser sessions in real-time",
  "version": "0.1.0",
  "action": {
    "default_title": "Open Tabia",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "storage",
    "sessions",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://*.supabase.co/*"
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "128": "icon-128.png"
  },
  "options_ui": {
    "page": "index.html",
    "open_in_tab": false
  },
  "minimum_chrome_version": "114",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
